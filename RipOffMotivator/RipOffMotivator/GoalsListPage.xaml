<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:local="clr-namespace:RipOffMotivator;assembly=RipOffMotivator"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="RipOffMotivator.GoalListPage"
                   Title="Goals">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
	<StackLayout>
		<ListView ItemsSource="{x:Static local:App.Goals}" />
		<Button Text="Create New" Clicked="OnCreateGoal" />
		<Button Text="Add Trigger" Clicked="OnAddTrigger" />
	</StackLayout>
</ContentPage>